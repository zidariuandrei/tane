{
	"format_on_save": "on",
	"formatter": {
		"external": {
			"command": "bunx",
			"arguments": ["@biomejs/biome", "format", "--stdin-file-path", "{buffer_path}"]
		}
	},
	"languages": {
		"TypeScript": {
			"format_on_save": "on"
		},
		"JavaScript": {
			"format_on_save": "on"
		},
		"Svelte": {
			"format_on_save": "on"
		},
		"JSON": {
			"format_on_save": "on"
		},
		"CSS": {
			"format_on_save": "on"
		}
	}
}
